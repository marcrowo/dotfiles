" Specify a directory for plugins
" - For Neovim: ~/.local/share/nvim/plugged
" - Avoid using standard Vim directory names like 'plugin'
call plug#begin('~/.vim/plugged')

Plug 'altercation/vim-colors-solarized'
Plug 'lifepillar/vim-mucomplete'

" Initialize plugin system
call plug#end()

"""" 1. Vim Behaviour.
" Use filetype-based syntax highlighting, ftplugins, and indentation.
syntax enable
filetype plugin indent on

" Use numbering. Don't use relative numbering as this is slow (especially in
" .tex files).
set number

" Enables mouse support. Note that on Mac OS X this doesn't work well on the
" default terminal.
set mouse=a
if has("mouse_sgr")
    set ttymouse=sgr
else
    set ttymouse=xterm2
end

set backspace=2 " make backspace work like most other apps

set clipboard=unnamedplus " use system clipboard

" mucomplete
set completeopt+=menuone,noselect

"""" 2. Key Bindings.
" More convenient movement when lines are wrapped.
nmap j gj
nmap k gk

inoremap jk <ESC>

let mapleader="\<Space>"
let maplocalleader="\<Space>"

" Turn off highlighting for search <CR>.
nnoremap <CR> :nohlsearch <bar> redraw! <CR>

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" better moving between buffers
nnoremap ]b :bn <CR>
nnoremap [b :bp <CR>

"""" 3. Vim Appearance.
set background=dark
" Search settings
set hlsearch " highlight
set incsearch " jump to best fit

" Tab settings
set autoindent
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
" Make statusline appear even with only single window.
set laststatus=2

set splitbelow
set splitright

set timeoutlen=1000 ttimeoutlen=0

" Show vertical line at column 80
set colorcolumn=80
